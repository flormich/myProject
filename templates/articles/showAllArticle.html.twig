{% extends 'base.html.twig' %}
{% block title %} Montrer Articles {% endblock %}
{% block body_id %} app {% endblock %}
{% block header %}
    {# {% include 'shared/_header.html.twig' %} #}
{% endblock %}

{% block main %}
    {% include 'baseOpen.html.php' %}
        {# Corp de la page d'articles #}
    <div class="backgroundCreate heightMoy">
        <br><center>
        <h3><b><u>Articles</u></b></h3>
        {% if not app.user %}
        {% else %}
            {% if (app.user.role.id == "1") %}
            <a href="{{ path('manage_articles') }}"> <input type="button" value="Mettre en liste"> </a>
            <br><br>
            {% else %}
            {% endif %}
        {% endif %}
    </div>
       <div class="backgroundCreate">
        <section class="paragraphe subtitle read ">
            <center>
            <table class="tableauReadScrap backgroundWhite" style="border-collapse:collapse; text-align:center; margin:auto">                
                <tbody class="pointerRead">
                        <tr class="textShadow borderTableauUsers textTableauUsers" style="text-align:center">
                    {% for article in articles %}
                        {% if ((article.id)%3 == 0) %}
                        </tr><tr>
                            <td style="height:50px"></td>
                        </tr><tr class="textShadow borderTableauUsers textTableauUsers" style="text-align:center">
                            <td class=" borderTrue" style="border: 1px solid black; width:300px; height:300px; text-decoration:none;">
                                <a href="{{ path('show_one_article', {'title':article.title}) }}" style="text-decoration:none; color:black">
                                    <p style="color:red">{{ article.title }}
                                    <br>
                                    {# {{ article.picture }} #}
                                </a>
                            </td>
                            <td style="width:50px"></td>
                        {% else %}
                            <td class=" borderTrue" style="border: 1px solid black; width:300px; height:300px; ">
                                <a href="{{ path('show_one_article', {'title':article.title}) }}" style="text-decoration:none; color:black">
                                    {{ article.title }}
                                    <br>
                                    {# {{ article.picture }} #}
                                </a>
                            </td>     
                            <td style="width:50px"></td>                       
                        {% endif %}
                    {% endfor %}                       
                    </tr> 
                </tbody>                    
            </table>
            <br>
        <br>
        {% include 'footer.html.php' %}
        </section>
    </div>
{% endblock %} 